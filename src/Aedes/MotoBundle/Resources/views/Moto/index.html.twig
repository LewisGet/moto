{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Moto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>Status</th>
                <th>Displacement</th>
                <th>Fuel</th>
                <th>Years</th>
                <th>Mileage</th>
                <th>Cooling</th>
                <th>Modifiedcontent</th>
                <th>Tradingcontent</th>
                <th>Brand</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('moto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.displacement }}</td>
                <td>{{ entity.fuel }}</td>
                <td>{{ entity.years }}</td>
                <td>{{ entity.mileage }}</td>
                <td>{{ entity.cooling }}</td>
                <td>{{ entity.modifiedContent }}</td>
                <td>{{ entity.tradingContent }}</td>
                <td>{{ entity.brand }}</td>
                <td>
					{% for image in entity.image %}
						{{ image }}
					{% endfor %}
				</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('moto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('moto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('moto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
